<%= form_for([@photo, @photo.votes.build], html: { method: :patch }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      	<%= f.hidden_field :user_id, :value => current_user.id%>
      	<%= f.hidden_field :value, :value => 0%>
        
   		<%= f.submit "upvote", class: "btn btn-xs btn-success"%>
		
		<%= f.submit "downvote", class: "btn btn-xs btn-danger"%> 
		
    <% end %>


