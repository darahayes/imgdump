<% provide(:title, 'Photo Upload') %>
<h2>Upload Photo</h2>
<div class="row">
      <div class="span6 offset3">
        <%= form_for(@photo, html: { multipart: true }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>   <!-- NEW LINE  -->

          <%= f.label :title %>
          <%= f.text_field :title %>

          <div class="upload-btn">
    	  <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "upload-btn" %>
      </div>

    	  <%= f.label :remote_image_url, "or paste in a URL" %>  
    	  <%= f.text_field :remote_image_url %>
          <%= f.submit "Upload", class: "btn btn-large btn-primary" %>

           
        <% end %>
      </div>
 </div>

 <script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>