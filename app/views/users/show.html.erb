<% provide(:title, @user.name) %>
    <div class="row">
      <aside class="span4">
        <section>
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
          </h1>
        </section>
      </aside>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <div class="well">
        <ul class="nav nav-list">
            <li class="nav-header"><%=@user.name%></li>
            <li class="active"><a href="#">Photos</a></li>
            <li><a href="#">Comments</a></li>
            <li><a href="#">Feed</a></li>
            <% if current_user? @user%>
              <li class="divider"></li>
              <li><%= link_to "Settings", edit_user_path(@user) %></li>
            <%end%>
        </ul>
      </div>
      </div>
      <div class="span8">
        <%if @user.photos.any?%>
          <%@user.photos.each do |photo|%>
          <ul class="thumbnails">
                      <li class="span3">
                        <a class="thumbnail" rel="lightbox[group]" href=<%=photo_path(photo)%>><img class="group1" src=<%=photo.image.to_s%> title=<%=photo.title%> /></a>
                          </li> <!--end thumb -->
                           <!--end thumb -->                 
                  </ul><!--end thumbnails -->
            <%end%>
          <%elsif current_user?(@user)%>
            <h2>You don't have any photos... Start by <%=link_to "uploading", upload_path%></h2>
          <%else%>
            <h2><%=@user.name%> doesn't have any photos. Loser...</h2>
          <%end%>
      </div>
    </div>
